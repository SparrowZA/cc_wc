    "version": "0.2.0",
    "configurations": [

        {
            "name": "Byte Count",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": ["-c", "test.txt"]
        },
        {
            "name": "Line Count",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": ["-l", "test.txt"]
        },
        {
            "name": "Word Count",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": ["-w", "test.txt"]
        },
        {
            "name": "Default full text",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": ["full_text.txt"]
        }
    ]
}